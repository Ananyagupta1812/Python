# PROJECT- BASIC CALCULATOR IN PYTHON USING MATCH

num1=int(input("Enter 1st number: "))
num2=int(input("Enter 2nd number: "))

print("CALCULATOR FUNCTIONS")
print("1. ADDITION")
print("2. SUBTRACTION")
print("3. MULTIPLICATION")
print("4. DIVISION")
print("5. MODULUS")
print("6. EXPONENTIATION")
choice=int(input("Enter your choice: "))

match(choice):
    case 1:
        print("Sum of given numbers is: ",num1+num2)
    case 2:
        print("Difference of given numbers is: ",num1-num2)
    case 3:
        print("Product of given numbers is: ",num1*num2)
    case 4:
        print("Divisor of given numbers is: ",num1/num2)
    case 5:
        print("Remainder of given numbers is: ",num1%num2)
    case 6:
        print("Exponetiation of given numbers is: ",num1**num2)
    case _:
        print("Invalid choice!")



